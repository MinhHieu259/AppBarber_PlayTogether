<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:text="MÁY TÍNH"
            android:textSize="30dp"
            android:layout_span="4"
            android:textAlignment="4"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:textSize="20dp"
            android:id="@+id/kq"
            android:layout_span="4"
            android:textAlignment="4"
            />



    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            android:text="7"
            android:layout_weight="1"
            android:id="@+id/so7"
            android:textSize="30dp"
            />
        <Button
            android:text="8"
            android:layout_weight="1"
            android:id="@+id/so8"
            android:textSize="30dp"/>
        <Button
            android:text="9"
            android:layout_weight="1"
            android:id="@+id/so9"
            android:textSize="30dp"/>
        <Button
            android:text="/"
            android:layout_weight="1"
            android:id="@+id/chia"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            android:text="4"
            android:layout_weight="1"
            android:id="@+id/so4"
            android:textSize="30dp"/>
        <Button
            android:text="5"
            android:layout_weight="1"
            android:id="@+id/so5"
            android:textSize="30dp"/>
        <Button
            android:text="6"
            android:layout_weight="1"
            android:id="@+id/so6"
            android:textSize="30dp"/>
        <Button
            android:text="X"
            android:layout_weight="1"
            android:id="@+id/nhan"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            android:text="1"
            android:layout_weight="1"
            android:id="@+id/so1"
            android:textSize="30dp"/>
        <Button
            android:text="2"
            android:layout_weight="1"
            android:id="@+id/so2"
            android:textSize="30dp"/>
        <Button
            android:text="3"
            android:layout_weight="1"
            android:id="@+id/so3"
            android:textSize="30dp"/>
        <Button
            android:text="-"
            android:layout_weight="1"
            android:id="@+id/tru"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <Button
            android:text="AC"
            android:layout_weight="1"
            android:id="@+id/xoa"
            android:textSize="30dp"/>
        <Button
            android:text="0"
            android:layout_weight="1"
            android:id="@+id/so0"
            android:textSize="30dp"/>
        <Button
            android:text="="
            android:layout_weight="1"
            android:id="@+id/bang"
            android:textSize="30dp"/>
        <Button
            android:text="+"
            android:layout_weight="1"
            android:id="@+id/cong"
            android:textSize="30dp"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="C"
            android:id="@+id/bo"
            android:layout_span="2"
            android:textAlignment="4"
            android:textSize="30dp"/>
        <Button
            android:text="Thoát"
            android:id="@+id/thoat"
            android:layout_span="2"
            android:textAlignment="4"
            android:textSize="30dp"/>
    </TableRow>

    </TableLayout>
</LinearLayout>