<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">
<RelativeLayout
    android:id="@+id/noibatrelative"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    >
<ImageView
    android:id="@+id/noibatimage"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:src="@drawable/toclangtu"
    android:scaleType="centerCrop"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/noibatimage"
        android:background="#2D384C"
        >
        <TextView
            android:id="@+id/namesalon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon lãng tử"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/antic"
            />
        <TextView
            android:id="@+id/diachisalon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41 Phạm Văn Nghị"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:fontFamily="@font/gilda_display"
            />
    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>